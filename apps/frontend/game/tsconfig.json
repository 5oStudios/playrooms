{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "paths": {
      "@kingo/core": ["libs/core/src/index.ts"],
      "@kingo/events": ["libs/events/src/index.ts"],
      "@kingo/game-client": ["libs/game-client/src/index.ts"],
      "@kingo/tiktok-client": ["libs/tiktok-client/src/index.ts"],

      "@components/*": ["apps/frontend/game/src/components/*"],
      "@hooks/*": ["apps/frontend/game/src/hooks/*"],
      "@utils/*": ["apps/frontend/game/src/utils/*"],
      "@store/*": ["apps/frontend/game/src/store/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "removeComments": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../../apps/frontend/game/.next/types/**/*.ts",
    "../../../dist/apps/frontend/game/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../../dist/apps/frontend/game/.next/.next/types/**/*.ts",
    "../../../dist/apps/frontend/game/next/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
